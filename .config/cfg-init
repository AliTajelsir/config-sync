git clone --bare https://github.com/AliTajelsir/config-sync.git $HOME/.config-sync
cfg () {
    /usr/bin/git --git-dir=$HOME/.config-sync/ --work-tree=$HOME $@
}
mkdir -p .config-backup
cfg checkout
if [ $? = 0 ]; then
  echo "Checking out cfg...";
  else
    echo "Backing up pre-existing dot files and checking out cfg...";
    cfg checkout 2>&1 | egrep "\s+\." | awk {'print $1'} | xargs -I{} mv {} .config-backup/{}
fi;
cfg checkout
if [ $? = 0 ]; then
  echo "Checking out cfg completed successfully"
fi;
cfg config --local status.showUntrackedFiles no
